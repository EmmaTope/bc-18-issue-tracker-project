<% layout('layout') -%>
<% block('style').append('<link type="text/css" href="#">') %>
<div class="container">
    <div class="row">
        <% include ../partials/header %>
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading panel-head">Create Issue</div>
            <div class="panel-body">
                <% if (currentUser.department != "null") {%>
                    <% include ../partials/flash_success %>
                    <% include ../partials/flash %>
                    <!--<% /*include ../partials/errors.ejs */%>-->

                    <div class="col-sm-10 col-sm-offset-1">
                        <form method="post" action="/issue">
                            <div class="form-group">
                            <label>Issue Name:</label>
                            <input id="issue_name" name="issue_name" class="form-control">
                        </div>
                            <div class="form-group">
                                <label>Issue Description</label>
                                <textarea id="issue_description" name="issue_description" class="form-control" rows="3"></textarea>
                            </div>
                            <div class="form-group">
                                <label>Priority</label>
                                <select id="issue_priority" name="issue_priority" class="form-control">
                                    <option value="">--Select--</option>
                                    <option value="low">Low</option>
                                    <option value="medium">Medium</option>
                                    <option value="high">High</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Department</label>
                                <select name="issue_dept" id="issue_dept" class="form-control text-center">
                                    <option value="null">--Choose Department--</option>
                                    <option value="1--Operations">Operations</option>
                                    <option value="2--Finance">Finance</option>
                                    <option value="3--Training">Training</option>
                                    <option value="4--Sales">Sales</option>
                                    <option value="5--Recruitment">Recruitment</option>
                                    <option value="6--Marketing">Marketing</option>
                                </select>
                            </div>

                                <button type="submit" class="btn btn-success">Submit</button>

                            </form>
                    </div>
                <% } else {%>

                    <div class="panel-head">You cant create issue until you are assigned to a department</div>

                <% } %>

            </div>
        </div>
    </div>
</div>

<% block('body').append("<script src='/js/users.js'></script>") %>
<% block('body').append("<script>jQuery(document).ready(function() {setTabActive('[href=\"/departments\"]');}) </script>") %>
